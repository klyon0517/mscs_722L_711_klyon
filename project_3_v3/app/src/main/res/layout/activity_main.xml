<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/arFragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dwarfAxe"
                android:src="@drawable/dwarf_axe"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dwarfBomb"
                android:src="@drawable/dwarf_bomb"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/elf"
                android:src="@drawable/elf"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/goblin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/goblin" />

            <ImageView
                android:id="@+id/horseKnight"
                android:src="@drawable/horse_knight"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/knight"
                android:src="@drawable/knight"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/orc"
                android:src="@drawable/orc"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/troll"
                android:src="@drawable/troll"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/wizard"
                android:src="@drawable/wizard"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>